// Mobile Sidebar Menu
div(class="overlay fixed inset-0 bg-black z-30" id="overlay")
div(class="mobile-menu fixed left-0 top-0 h-full w-3/4 max-w-xs bg-blue-900 z-40 shadow-2xl p-6 overflow-y-auto" id="mobile-menu")
  div(class="flex justify-between items-center mb-8")
    div(class="flex items-center")
      i(class="fas fa-building text-2xl mr-3 text-white")
      span(class="text-xl font-bold text-white") BuildTech Engineers
    button(class="text-white text-xl p-2" id="close-menu")
      i(class="fas fa-times")
  
  div(class="space-y-6")
    a(href="/" class="flex items-center text-white hover:text-blue-200 transition py-2 border-b border-blue-800")
      i(class="fas fa-home mr-3")
      span Home
    a(href="#services" class="flex items-center text-white hover:text-blue-200 transition py-2 border-b border-blue-800")
      i(class="fas fa-tools mr-3") 
      span Services
    a(href="#projects" class="flex items-center text-white hover:text-blue-200 transition py-2 border-b border-blue-800")
      i(class="fas fa-project-diagram mr-3")
      span Projects
    a(href="#about" class="flex items-center text-white hover:text-blue-200 transition py-2 border-b border-blue-800")
      i(class="fas fa-info-circle mr-3")
      span About
    a(href="#contact" class="flex items-center text-white hover:text-blue-200 transition py-2")
      i(class="fas fa-envelope mr-3")
      span Contact
  
  div(class="mt-12 pt-6 border-t border-blue-800")
    div(class="text-white text-sm mb-6") Contact Info:
    div(class="space-y-3")
      div(class="flex items-start text-white text-sm")
        i(class="fas fa-phone mt-1 mr-3 text-yellow-400")
        span +1 (555) 234-5678
      div(class="flex items-start text-white text-sm")
        i(class="fas fa-envelope mt-1 mr-3 text-yellow-400")
        span info@buildtechengineers.com

// Main Navigation
header(class="bg-gradient-to-r from-blue-900 to-blue-700 text-white")
  nav(class="container mx-auto px-4 py-6 flex justify-between items-center")
    div(class="flex items-center")
      i(class="fas fa-building text-3xl mr-3")
      span(class="text-2xl font-bold") BuildTech Engineers
    div(class="hidden md:flex space-x-8")
      a(href="/" class="hover:text-blue-200 transition") Home
      a(href="/#services" class="hover:text-blue-200 transition") Services
      a(href="/#projects" class="hover:text-blue-200 transition") Projects
      a(href="/#about" class="hover:text-blue-200 transition") About
      a(href="/#contact" class="hover:text-blue-200 transition") Contact
    button(class="md:hidden text-xl" id="open-menu")
      i(class="fas fa-bars")
